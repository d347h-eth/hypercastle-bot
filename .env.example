# Remote sales feed API (base URL only; /sales/v6 will be appended)
SALES_API_BASE_URL=
SALES_API_KEY=
SALES_COLLECTION_ADDRESS=

# X (Twitter) API - OAuth 1.0a user context (recommended simplest)
X_APP_KEY=
X_APP_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=
# Use fake publisher (logs locally) instead of posting to X (set to "true" to enable fake)
USE_FAKE_PUBLISHER=false

# X user (for optional timeline verification)
X_USER_ID=
X_USERNAME=

# Polling / Rate limiting
POLL_INTERVAL_MS=30000

# Data Directory (stores SQLite DB and temporary media artifacts)
# Defaults to ./data if not set.
# DB_PATH will default to $DATA_DIR/bot.sqlite.db
# ARTIFACTS_DIR will default to $DATA_DIR/artifacts
DATA_DIR=./data

# Verbose debug messages with remote API responses dumped
DEBUG_VERBOSE=false

# Skip sale posting if that token ID has already been posted within last X hours
TOKEN_COOLDOWN_HOURS=24
